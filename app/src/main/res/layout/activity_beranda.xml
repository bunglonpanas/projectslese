<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/cd1"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_margin="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="110dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:text="Data Barang"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/garis1"
                        app:layout_constraintTop_toBottomOf="@id/text1"
                        android:background="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:layout_height="3dp"/>
                    <TextView
                        android:id="@+id/totBarang"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/garis1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="30sp"
                        android:layout_marginTop="10dp"
                        android:hint="56"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_margin="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="110dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:text="Barang Limit"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/garis2"
                        app:layout_constraintTop_toBottomOf="@id/text2"
                        android:background="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:layout_height="3dp"/>
                    <TextView
                        android:id="@+id/totBarangKurang"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/garis2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="30sp"
                        android:layout_marginTop="10dp"
                        android:hint="56"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_margin="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="110dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:text="Barang Over"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/garis3"
                        app:layout_constraintTop_toBottomOf="@id/text3"
                        android:background="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:layout_height="3dp"/>
                    <TextView
                        android:id="@+id/totBarangLebih"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/garis3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="30sp"
                        android:layout_marginTop="10dp"
                        android:hint="56"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/line1"
        app:layout_constraintTop_toBottomOf="@id/cd1"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/textWarning"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="Warning!List Data Barang, Sisa Stok Kurang Dari Minimum Stock"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/line2"
        app:layout_constraintTop_toBottomOf="@id/textWarning"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark" />

    <ListView
        android:paddingTop="70dp"
        android:layout_width="match_parent"
        android:id="@+id/listViewStock"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="150dp"
        tools:listitem="@layout/row_stock"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>